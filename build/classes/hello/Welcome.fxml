<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" spacing="20" 
      style="-fx-padding: 20; 
             -fx-background-image: url('/recources/background.jpg'); 
             -fx-background-size: cover;" 
      fx:controller="hello.WelcomeController" prefWidth="800" prefHeight="600">
    <Label text="Bienvenue à la Gestion Clinique" 
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2E86C1;"/>
    <Label text="Simplifiez la gestion de votre clinique grâce à notre application." 
           style="-fx-font-size: 16px; -fx-text-fill: #555555;"/>
    <Button text="Commencer" 
            fx:id="btnCommencer" 
            style="-fx-background-color: #2E86C1; -fx-text-fill: white; -fx-font-weight: bold;" 
            onAction="#commencer"/>
</VBox>

