<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="hello.PlanifierRdvController" spacing="20" alignment="CENTER" style="-fx-padding: 20;">
    <Label text="Planifier un Rendez-vous" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <HBox spacing="10" alignment="CENTER">
        <Label text="Date :" />
        <DatePicker fx:id="datePickerRdv" />
    </HBox>
    <HBox spacing="10" alignment="CENTER">
        <Label text="Heure :" />
        <TextField fx:id="fieldHeure" promptText="HH:mm" />
    </HBox>
    <HBox spacing="10" alignment="CENTER">
        <Label text="Docteur ID :" />
        <TextField fx:id="fieldDocteurId" />
    </HBox>
    <HBox spacing="10" alignment="CENTER">
        <Label text="Patient ID :" />
        <TextField fx:id="fieldPatientId" />
    </HBox>
    <Button text="Planifier" onAction="#planifierRendezVous" />
</VBox>
