<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" spacing="10" alignment="CENTER" style="-fx-padding: 20;" fx:controller="hello.AddDoctorDialogController">
    <Label text="Ajouter un Docteur" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <TextField fx:id="tfNom" promptText="Nom"/>
    <TextField fx:id="tfPrenom" promptText="Prénom"/>
    <TextField fx:id="tfSpecialite" promptText="Spécialité"/>
    <TextField fx:id="tfLicence" promptText="Numéro de Licence"/>
    <Button text="Enregistrer" fx:id="btnEnregistrer" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" onAction="#enregistrer"/>
</VBox>
